<!DOCTYPE codename-titlestate >
<titlestate>
	<sprites folder="menus/titlescreen">
		<!-- <sprite name="menuBG" sprite="menuBG" x="0" y="0" scale="1.38"/> -->
		<sprite name="logo" sprite="logopeb" x="0" y="0" scale="1"/>
		<titleEnter sprite="titleEnter" x="-150" y="-100" />
	</sprites>

	<intro length="16">
		<text beat="1">
			<line text="FunkinPibby" />
		</text>

		<text beat="3">
			<line text="FunkinPibby" />
			<line text="presents" />
		</text>

		<text beat="4" /> <!-- clears the screen !-->

		<text beat="5">
			<line text="Not associated" />
			<line text="with" />
		</text>

		<text beat="7">
			<line text="Not associated" />
			<line text="with" />
			<line text="Newgrounds" />
			<sprite path="menus/titlescreen/newgrounds_logo" scale="0.8"/>
		</text>

		<text beat="8" /> <!-- clears the screen !-->

		<text beat="9">
			<introtext line="1" />
		</text>

		<text beat="11">
			<introtext line="1" />
			<introtext line="2" />
		</text>

		<text beat="12"/>

		<text beat="13">
			<line text="The Darkness" />
		</text>

		<text beat="14">
			<line text="Pibby" />
		</text>

		<text beat="15">
			<line text="Pibby" />
			<line text="Apocalypse" />
		</text>
	</intro>
</titlestate>